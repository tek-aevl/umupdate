#!/bin/bash
echo "Welcome $USER this is prune @$ip"
echo "Podman List"
sudo podman ps
echo "Stop all"
sudo podman stop --all
echo "Prune?"
sudo podman container prune
sudo podman ps
echo "Updating"
sudo podman pull cloudflare/cloudflared
echo "bash start"
echo "starting if device has it on $ip"
sleep 1
echo "if next line is an error you need to make the file on the vm, and add the cloudflare connector info"
bash /usr/bin/start
echo "resuming..."
echo "Status"
sudo podman ps